{

	"manifest_version": 2,
	"name": "Minima MiFi",
	"description": "Minima web integration.",
	"version": "1.0",
	"icons": {
		"16": "icon.png",
		"32": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"background": {
	    "scripts": ["background.js"]
	  },
	"content_scripts": [
	  {
	    "matches": [
	      "<all_urls>"
	    ],
	    "js": ["jquery-3.4.1.min.js","content.js"]
	  }
	],
  "browser_action": {
    "default_title": "Minima",
    "default_icon" : "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "webNavigation",
    "https://*/*",
    "http://*/*",
    "tabs"
  ]
}
